<h4>Pedidos</h4><hr>
<table class="table ">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Prato</th>
      <th>Data</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.employee.name %></td>
        <td><%= order.dish.name %></td>
        <td><%= order.date %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>