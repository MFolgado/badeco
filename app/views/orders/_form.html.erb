<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <h4>Funcionário</h4>
    <%= f.select :employee_id, 
                  Employee.all.collect { |p| [ p.name , p.id ] }, 
                  {include_blank: "Escolha um funcionário"} %>
  </div>
  <div class="field">
    <h4>Prato</h4>
    <%= f.select :dish_id,
                  Dish.all.collect {|p| [p.name, p.id]},{
                  include_blank:"Escolha um prato"} %>
  </div>
  <div class="field">
   <h4>Data</h4>
    <%= f.text_field :date , :type => "date" %>
  </div>
  <div class="actions">
    <%= f.submit 'Salvar'%>
  </div>
<% end %>
