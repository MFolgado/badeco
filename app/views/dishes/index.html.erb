<br>
<h1>Lista de Pratos</h1>
<br>
<button class="btn" type="button"><%= link_to 'Cadastro', new_dish_path %></button>
<button class="btn" type="button"><%= link_to 'Voltar',  orders_path%></button>
<hr>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <td><%= dish.name %></td>
        <td><%= link_to 'Show', dish %></td>
        <td><%= link_to 'Edit', edit_dish_path(dish) %></td>
        <td><%= link_to 'Destroy', dish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

