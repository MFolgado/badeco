<h4>Pratos</h4><hr>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <td><%= dish.name %></td>   
        <td><%= link_to t(:edit), edit_dish_path(dish) %></td>
        <td>
          <%= link_to t(:destroy), dish,  method: :delete, data: { :confirm =>  ('.confirmation') } %>
      </tr>
    <% end %>
  </tbody>
</table>
<hr>
<div class="digg_pagination">
<%= will_paginate @dishes, :page_links => false %>
</div>


