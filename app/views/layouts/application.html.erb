<!DOCTYPE html>
<html>
  <head>
    <title>Badeco</title>    
 
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>     
    <%= javascript_include_tag 'application',  'data-turbolinks-track' => true %>  
    <%= csrf_meta_tags %>
    
  </head> 
  <body>
 
  <!-- <div class="container"> -->
    <div class="row">
      <div class="span12 topo">
        <h1> Badeco </h1>
        <p>Sistema para Controle de Marmita</p>
      </div>
    </div>
  <!-- </div> -->

   
  
    <div class="row-fluid">     
      <div class="span2 " >         
            <div class="accordion menu " id="accordion2">
              <div class="accordion-group">                
                 <a href="/" class="menu menusub"> <i class="fa  fa-calendar"></i> Calendário </a>

                <div class="accordion-heading">                 
                  <a class="menu " data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">
                    Cadastro  
                  </a>
                </div>
                <div id="collapseOne" class="accordion-body collapse out">
                  <div class="">
                    <a href="/employees/new" class="sub"> <i class="fa fa-users"></i> Funcionários </a>
                    <a href="/dishes/new" class="sub"> <i class="fa fa-users"></i> Pratos</a>
                    <a href="/orders/new" class="sub"> <i class="fa fa-users"></i> Pedidos</a>
                  </div>
                </div>
              </div>
              <div class="accordion-group">
                <div class="accordion-heading">
                  <a class=" menu" data-toggle="collapse" data-parent="#accordion2" href="#collapseTwo">
                   Consulta
                  </a>
                </div>
                <div id="collapseTwo" class="accordion-body collapse">
                  <div class="">
                    <a href="/employees" class="sub"> <i class="fa fa-users"></i> Funcionário</a>
                    <a href="/dishes" class="sub"> <i class="fa fa-users"></i> Pratos</a>
                    <a href="/orders" class="sub"> <i class="fa fa-users"></i> Pedidos</a>
                  </div>
                </div>
              </div>
              <a href="/homes/show" class="menu"> <i class="fa fa-plus-square-o"></i> Total Mês</a>     
            </div>                                     
      </div>
      <div class="span10 ">
        <div class="corpo">
          <%= yield %>
        </div>        
      </div>      
    </div>
  </body>
</html>
